@model VerificationSystem.Models.Pager
@using VerificationSystem.Extensions
@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="?@Html.GetQueryStringWithParameter("page", ( 1).ToString())">First</a>
            </li>
            <li>
                <a href="?@Html.GetQueryStringWithParameter("page", (Model.CurrentPage - 1).ToString())">Previous</a>
                </li>
        }

        @for (var page = Model.StartPage; page <= Model.EndPage; page++)
        {
            <li class="@(page == Model.CurrentPage ? "active" : "")">
                <a href="?@Html.GetQueryStringWithParameter("page", page.ToString())">@page</a>
            </li>

        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="?@Html.GetQueryStringWithParameter("page", (Model.CurrentPage + 1).ToString())">Next</a>
            </li>
                <li>
                    <a href="?@Html.GetQueryStringWithParameter("page", (Model.TotalPages).ToString())">Last</a>
                </li>
        }
    </ul>
}