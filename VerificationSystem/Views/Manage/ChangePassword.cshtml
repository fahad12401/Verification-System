@model VerificationSystem.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}



<div class="row">
    <!-- left column -->
    <div class="col-md-offset-3 col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3><strong> Change Password</strong></h3>

            </div>
            <!-- /.box-header -->
            <!-- form start -->
           @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
           {
            @Html.AntiForgeryToken()

                <div class="box-body">

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword)
                     
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Enter Current Password..." })
                     
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword)
                      
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter New Password..." })
                    
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)
                       
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm New Password..." })
                      
                    </div>
              

                </div>
          
                <div class="box-footer">
                    <input type="submit" value="Change password" class="btn btn-primary col-md-12" />
                </div>


            }




        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}