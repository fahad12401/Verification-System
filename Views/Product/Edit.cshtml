@model VerificationSystem.Models.ProductEditVM
@{
    ViewBag.Title = "Edit";
}



<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3><strong> Update Product</strong></h3>

            </div>
            <!-- /.box-header -->
            <!-- form start -->
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm_Product" }))
            {
            @Html.AntiForgeryToken()

                <div class="box-body">


                    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@


                    @Html.HiddenFor(x => x.ProductId)

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group ">
                                @Html.LabelFor(m => m.CompanyId, "Company Name")

                                @Html.DropDownListFor(x => x.CompanyId, ViewBag.Companies as SelectList, "", new { @class = "form-control chosen-company  ", data_placeholder = "Select a Comapny" })
                                @Html.ValidationMessageFor(m => m.CompanyId, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, "Product Name")

                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, "Product Description")

                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "4" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                  
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.SMSApplicable, "SMS Applicable?")

                                @*@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.EditorFor(model => model.SMSApplicable, new { @class = "form-control" })

                            </div>
                        </div>
                    </div>
                    



                </div>
          
                <div class="box-footer">
                   <div class="row">
                    <div class="col-md-4">
                        <input type="submit" value="Update Product" class="btn btn-primary col-md-12" />
                       </div>
                   </div>
                  
                </div>


            }




        </div>
    </div>
</div>





<div align="center">
    @Html.ActionLink("Back to List", "Index")
</div>
@section Styles{
    <style type="text/css">
        /*input[type="checkbox"] {width:20px;height:20px;}*/
        .form-horizontal .control-label {
            text-align: left;
        }

        .HeadingStyle {
            color: #333333;
            font-family: Gill Sans / Gill Sans MT, sans-serif;
            font-weight: bold;
        }
    </style>

}

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")
}


